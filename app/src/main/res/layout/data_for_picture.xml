<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_num_3"
        android:layout_marginEnd="@dimen/margin_num_2"
        android:layout_marginStart="@dimen/margin_num_2"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_num_2"
            android:layout_marginLeft="@dimen/margin_num_2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/data_for_picture_duration_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:src="@drawable/icon_for_selfie_white_durationn" />

            <com.forst.miri.runwithme.widges.TextViewCustomFont
                android:id="@+id/data_for_picture_duration_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/all_rates_heb"
                android:textColor="@color/colorWhite"
                android:shadowColor="@color/colorBlack"
                android:shadowRadius="3"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_num_2"
            android:layout_marginLeft="@dimen/margin_num_2"
            android:orientation="vertical">

            <com.forst.miri.runwithme.widges.TextViewCustomFont
                android:id="@+id/data_for_picture_length_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/km"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:shadowColor="@color/colorBlack"
                android:shadowRadius="3"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:textAllCaps="true"/>

            <com.forst.miri.runwithme.widges.TextViewCustomFont
                android:id="@+id/data_for_picture_length_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/all_rates_heb"
                android:textColor="@color/colorWhite"
                android:shadowColor="@color/colorBlack"
                android:shadowRadius="3"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_num_2"
            android:layout_marginLeft="@dimen/margin_num_2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/data_for_picture_rate_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/icon_for_selfie_white_rate" />

            <com.forst.miri.runwithme.widges.TextViewCustomFont
                android:id="@+id/data_for_picture_rate_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/all_rates_heb"
                android:textColor="@color/colorWhite"
                android:shadowColor="@color/colorBlack"
                android:shadowRadius="3"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:textAllCaps="true" />


        </LinearLayout>
    </LinearLayout>>
    <ImageView
        android:id="@+id/data_for_picture_logo_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_without_text"
        android:layout_marginLeft="@dimen/margin_num_2"
        android:layout_gravity="left|bottom"/>

</FrameLayout>




