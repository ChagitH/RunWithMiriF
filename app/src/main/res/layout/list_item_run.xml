<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@drawable/dialog_background_pink_stroke_rounded"
    android:padding="5dip">


    <com.forst.miri.runwithme.widges.TextViewCustomFont
        android:id="@+id/item_run_data_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.12.2022"
        android:textColor="@color/colorLightPink"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_run_data_v2" />

    <View
        android:id="@+id/item_run_data_v2"
        android:layout_width="@dimen/margin_num_2"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/item_run_data_length_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_run_data_date_tv"/>

    <com.forst.miri.runwithme.widges.TextViewCustomFont
        android:id="@+id/item_run_data_length_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="center"
        android:text="length"
        android:textColor="@color/colorLightPink"
        app:layout_constraintLeft_toRightOf="@+id/item_run_data_v3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_run_data_v2"/>

    <View
        android:id="@+id/item_run_data_v3"
        android:layout_width="@dimen/margin_num_2"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@+id/item_run_data_duration_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_run_data_length_tv"  />

    <com.forst.miri.runwithme.widges.TextViewCustomFont
        android:id="@+id/item_run_data_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rate"
        android:textColor="@color/colorLightPink"
        app:layout_constraintLeft_toRightOf="@+id/item_run_data_v4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_run_data_v3" />

    <View
        android:id="@+id/item_run_data_v4"
        android:layout_width="@dimen/margin_num_2"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_run_data_duration_tv"  />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_keyboard_arrow_left_black_18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_run_data_v4"  />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />


</android.support.constraint.ConstraintLayout>