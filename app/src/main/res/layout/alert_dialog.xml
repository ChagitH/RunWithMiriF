<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dip"
    android:layout_height="180dip"
    android:layout_margin="@dimen/margin_num_1"
    android:background="@drawable/dialog_rounded_corners_white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <com.forst.miri.runwithme.widges.TextViewCustomFont
            android:id="@+id/alert_dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@drawable/title_rounded_corners_dark_pink"
            android:layout_centerInParent="true"
            android:layout_weight="0.2"
            />

        <com.forst.miri.runwithme.widges.TextViewCustomFont
            android:id="@+id/alert_dialog_tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textSize="@dimen/registration_text_size"
            android:layout_gravity="center" />



        <com.forst.miri.runwithme.widges.ButtonCustomFont
            android:id="@+id/alert_dialog_button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_weight="0.2"
            android:background="@color/colorTransparent"
            android:textColor="@color/colorDefaultButtonColor"
            android:textSize="@dimen/main_button_text_size"
            android:text="@string/i_understand_heb" />

    </LinearLayout>
</RelativeLayout>