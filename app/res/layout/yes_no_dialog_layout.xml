<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="300dip"
    android:background="@drawable/dialog_rounded_corners_white"
    android:layout_margin="@dimen/margin_num_1"
    android:layoutDirection="rtl">

    android:layout_width="@dimen/width_of_yes_no_dialog"
    android:layout_height="@dimen/height_of_yes_no_dialog"

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layoutDirection="rtl">

    <com.forst.miri.runwithme.widges.TextViewCustomFont
        android:id="@+id/yes_no_alert_dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_2"
        android:textColor="@color/colorWhite"
        android:background="@drawable/title_rounded_corners_dark_pink"
        android:layout_centerInParent="true"
        android:layout_weight="0.1"/>

    <com.forst.miri.runwithme.widges.TextViewCustomFont
        android:id="@+id/yes_no_alert_dialog_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="0.8"
        android:textColor="@color/colorDarkPink"
        android:gravity="center"
        android:textSize="@dimen/health_agreement_text_size"
        android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_weight="0.2"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_num_2"
            android:orientation="horizontal">
                <com.forst.miri.runwithme.widges.ButtonCustomFont
                    android:id="@+id/yes_no_alert_dialog_button_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/standart_small_margin"
                    android:layout_marginRight="@dimen/standart_small_margin"
                    android:text="@string/i_agree_heb"
                    android:background="@color/colorTransparent"
                    android:textColor="@color/colorDefaultButtonColor"
                    android:textSize="@dimen/text_size_1"/>

                <com.forst.miri.runwithme.widges.ButtonCustomFont
                    android:id="@+id/yes_no_alert_dialog_button_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/standart_small_margin"
                    android:layout_marginRight="@dimen/standart_small_margin"
                    android:text="@string/cancelation_heb"
                    android:background="@color/colorTransparent"
                    android:textColor="@color/colorDefaultButtonColor"
                    android:textSize="@dimen/text_size_1"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>