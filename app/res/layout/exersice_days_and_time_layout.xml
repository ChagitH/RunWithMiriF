            android:layout_margin="@dimen/margin_num_1"
            android:gravity="center">
            <com.forst.miri.runwithme.widges.CustomCheckBox
                android:id="@+id/day_of_exercise_thursday_view"
                android:layout_width="@dimen/day_box_size"
                android:layout_height="@dimen/day_box_size"
                app:uncheckedBackground="@drawable/small_rectangle_blue"
                app:checkedBackground="@drawable/small_full_rectangle_blue"
                app:isChecked="false"
                android:tag="4"/>
            <com.forst.miri.runwithme.widges.TextViewCustomFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_num_1"
