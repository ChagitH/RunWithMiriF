<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/background_login_480_800"
    tools:context="com.forst.miri.runwithme.activities.RegistrationActivity">

    <RelativeLayout
        android:id="@+id/object_1"
        android:layout_width="@dimen/size_of_circle_for_image_login_register"
        android:layout_height="@dimen/size_of_circle_for_image_login_register"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_activity_circle_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/camera"
            app:civ_border_color="@color/colorLightPink"
            app:civ_border_width="3dp" />

        <com.forst.miri.runwithme.widges.TextViewCustomFont
            android:id="@+id/registration_activity_tv_upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/user_pic_text_length_from_top"
            android:paddingBottom="20dp"
            android:text="@string/load_picture_heb"

            android:textColor="@color/colorWhite" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/object_2"
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/object_1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/object_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/object_1">

        <com.forst.miri.runwithme.widges.TextViewCustomFont
            android:id="@+id/registration_activity_tv_kg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/between_views_margin"
            android:layout_marginRight="@dimen/between_views_margin"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:gravity="left"
            android:hint="@string/wight_heb"
            android:lines="1"
            android:textColor="@color/colorDarkPink"
            android:textSize="@dimen/registration_text_size"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/colorDarkPink"
            android:gravity="center" />

        <com.forst.miri.runwithme.widges.TextViewCustomFont
            android:id="@+id/registration_activity_tv_year_of_birth"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/between_views_margin"
            android:layout_marginRight="@dimen/between_views_margin"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:gravity="center"
            android:hint="@string/year_of_birth_heb"
            android:lines="1"
            android:textColor="@color/colorDarkPink"
            android:textSize="@dimen/registration_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/colorDarkPink"
            android:gravity="center" />

        <com.forst.miri.runwithme.widges.TextViewCustomFont
            android:id="@+id/registration_activity_tv_hight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/between_views_margin"
            android:layout_marginRight="@dimen/between_views_margin"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:gravity="right"
            android:hint="@string/hight_heb"
            android:lines="1"
            android:textColor="@color/colorDarkPink"
            android:textSize="@dimen/registration_text_size" />
    </LinearLayout>

    <ScrollView

        android:id="@+id/object_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/object_2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="@dimen/margin_num_2"
        app:layout_constraintBottom_toTopOf="@+id/object_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/standart_tiny_padding"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:layout_marginTop="@dimen/standart_tiny_padding"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/standart_tiny_padding"
                android:paddingTop="@dimen/standart_tiny_padding"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_num_1"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.forst.miri.runwithme.widges.EditTextCustomFont
                        android:id="@+id/registration_activity_et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="8"
                        android:background="@color/colorTransparent"
                        android:gravity="right"
                        android:hint="@string/first_name_heb"
                        android:maxLength="12"
                        android:nextFocusDown="@id/registration_activity_et_last_name"
                        android:textAlignment="gravity"
                        android:textAppearance="@style/RegistrationBlackMainFont">

                        <requestFocus />
                    </com.forst.miri.runwithme.widges.EditTextCustomFont>

                    <View
                        android:id="@+id/registration_activity_v_first_name"
                        android:layout_width="@dimen/v_size"
                        android:layout_height="@dimen/v_size"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:background="@mipmap/v"
                        android:visibility="invisible" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <com.forst.miri.runwithme.widges.EditTextCustomFont
                        android:id="@+id/registration_activity_et_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="8"
                        android:background="@color/colorTransparent"
                        android:gravity="right"
                        android:hint="@string/last_name_heb"
                        android:maxLength="18"
                        android:nextFocusDown="@+id/registration_activity_et_id_num"
                        android:textAlignment="gravity"
                        android:textAppearance="@style/RegistrationBlackMainFont" />

                    <View
                        android:id="@+id/registration_activity_v_family_name"
                        android:layout_width="@dimen/v_size"
                        android:layout_height="@dimen/v_size"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:background="@mipmap/v"
                        android:visibility="invisible" />

                </LinearLayout>


            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="@dimen/between_views_margin"-->
