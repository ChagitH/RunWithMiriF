            <!--</LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:background="@color/colorLightGray"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standart_tiny_padding"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:layout_marginTop="@dimen/standart_tiny_padding"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="10">


                <com.forst.miri.runwithme.widges.EditTextCustomFont
                    android:id="@+id/registration_activity_et_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="9"
                    android:background="@color/colorTransparent"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/phone_num_heb"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:nextFocusDown="@+id/registration_activity_et_email"
                    android:paddingBottom="@dimen/standart_tiny_padding"
                    android:paddingTop="@dimen/standart_tiny_padding"
                    android:textAppearance="@style/RegistrationBlackMainFont" />

                <View
                    android:id="@+id/registration_activity_v_phone"
                    android:layout_width="@dimen/v_size"
                    android:layout_height="@dimen/v_size"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@mipmap/v"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:background="@color/colorLightGray"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/standart_tiny_padding"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:layout_marginTop="@dimen/standart_tiny_padding"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="10">


                <com.forst.miri.runwithme.widges.EditTextCustomFont
                    android:id="@+id/registration_activity_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="9"
                    android:background="@color/colorTransparent"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/email_heb"
                    android:inputType="textEmailAddress"
                    android:maxLength="25"
                    android:nextFocusDown="@+id/registration_activity_et_password_1"
                    android:paddingBottom="@dimen/standart_tiny_padding"
                    android:paddingTop="@dimen/standart_tiny_padding"
                    android:textAppearance="@style/RegistrationBlackMainFont" />

                <View
                    android:id="@+id/registration_activity_v_email"
                    android:layout_width="@dimen/v_size"
                    android:layout_height="@dimen/v_size"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/v"
                    android:visibility="invisible" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:background="@color/colorLightGray"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/standart_tiny_padding"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:layout_marginTop="@dimen/standart_tiny_padding"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="10">


                <com.forst.miri.runwithme.widges.EditTextCustomFont
                    android:id="@+id/registration_activity_et_password_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="9"
                    android:background="@color/colorTransparent"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/password_heb"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:nextFocusDown="@+id/registration_activity_et_password_2"
                    android:paddingBottom="@dimen/standart_tiny_padding"
                    android:paddingTop="@dimen/standart_tiny_padding"
                    android:textAppearance="@style/RegistrationBlackMainFont" />

                <View
                    android:id="@+id/registration_activity_v_password_1"
                    android:layout_width="@dimen/v_size"
                    android:layout_height="@dimen/v_size"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/v"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:background="@color/colorLightGray"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/standart_tiny_padding"
                android:layout_marginLeft="@dimen/between_views_margin"
                android:layout_marginRight="@dimen/between_views_margin"
                android:layout_marginTop="@dimen/standart_tiny_padding"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.forst.miri.runwithme.widges.EditTextCustomFont
                    android:id="@+id/registration_activity_et_password_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="9"
                    android:background="@color/colorTransparent"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/password_2_heb"
                    android:inputType="textPassword"
                    android:maxLength="8"
                    android:nextFocusDown="@+id/registration_activity_checkBox_health_agreement"
                    android:paddingBottom="@dimen/standart_tiny_padding"
                    android:paddingTop="@dimen/standart_tiny_padding"
                    android:textAppearance="@style/RegistrationBlackMainFont" />

                <View
                    android:id="@+id/registration_activity_v_password_2"
                    android:layout_width="@dimen/v_size"
                    android:layout_height="@dimen/v_size"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@mipmap/v"
                    android:visibility="invisible" />
            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/margin_num_1"
                android:gravity="right"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.forst.miri.runwithme.widges.CheckBoxCustomFont
                    android:id="@+id/registration_activity_checkBox_health_agreement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:nextFocusDown="@+id/registration_activity_button_register"
                    android:text="@string/i_red_and_agree_heb"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/i_agree_small_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/registration_activity_button_health_agreement"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.forst.miri.runwithme.widges.ButtonCustomFont
                    android:id="@+id/registration_activity_button_health_agreement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorTransparent"
                    android:text="@string/to_read_more"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorDarkPink"
                    android:textSize="@dimen/i_agree_small_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/registration_activity_checkBox_health_agreement"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/object_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/object_3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.forst.miri.runwithme.widges.ButtonCustomFont
            android:id="@+id/registration_activity_button_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/default_button"
            android:text="@string/register"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/green_button_text_size" />

        <com.forst.miri.runwithme.widges.ButtonCustomFont
            android:id="@+id/registration_activity_button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/between_views_margin"
            android:background="@drawable/default_button_stroke"
            android:text="@string/i_am_already_registered"
            android:textColor="@color/colorDarkPink"
            android:textSize="@dimen/green_button_text_size" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
